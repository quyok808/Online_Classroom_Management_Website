		const max_size = maxFileSize * 1024 * 1024;
		if (file) {
			// Kiểm tra dung lượng file
			if (file.size > max_size) {
				alert("File quá lớn, vui lòng chọn file có dung lượng nhỏ hơn " + (max_size / (1024 * 1024)) + " MB.");
