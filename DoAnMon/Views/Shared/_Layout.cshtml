    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Lobster&display=swap');
        @@import url('https://fonts.googleapis.com/css2?family=Great+Vibes&family=Platypi:ital,wght@0,300..800;1,300..800&display=swap');

        html, body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            height: 100%;
        }
        /*PHẦN MENU CHÍNH*/
        .menu-container {
            background-color: white; 
            border-bottom: 1px solid #ddd;
            display: flex;
            justify-content: center;
            align-items: center; 
            height: 80px;
            width: 100%;
            position: fixed; /* Cố định menu */
            top: 0; /* Đặt menu ở phía trên cùng */
            left: 0;
            z-index: 1000;
        }

        .menu {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            margin-left: 500px;
            gap: 80px; /* Khoảng cách giữa các mục */
        }

        .login-item {
            display: flex;
            list-style: none;
            margin-left: auto;
            padding: 0;
        }

            .menu li a, .login-item li a {
                text-decoration: none;
                color: rgb(74, 113, 255);
                font-size: 32px; /* Kích thước icon */
                padding: 10px;
                display: inline-flex;
                align-items: center;
                transition: all 0.3s;
            }

                .menu li a:hover, .login-item li a:hover {
                    color: #a12af7;
                }

                .menu li a.active {
                    border-bottom: 5px solid rgb(74, 113, 255); 
                    padding-bottom: 10px;
                }
        
        .footer {
            background-color: rgb(74, 113, 255);
            color: white;
            text-align: center;
            padding: 20px 0;
            margin-top: auto;

        } 
        .footer-container {
            
            text-align: center;
        }

        .footer-icons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

            .footer-icons a {
                color: white;
                text-decoration: none;
                font-size: 32px;
                position: relative;
                display: flex;
                align-items: center;
                justify-content: center;
                width: 60px;
                height: 50px;
                transition: margin 0.3s, color 0.3s;
            }

                .footer-icons a .info {
                    font-size: 14px;
                    display: none;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    background-color: white;
                    color: black;
                    padding: 5px 10px;
                    border-radius: 5px;
                    white-space: nowrap;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
                    z-index: 1;
                }

                .footer-icons a:hover i {
                    display: none;
                }

                .footer-icons a:hover .info {
                    display: block;
                }

                .footer-icons a:hover {
                    color: #ddd;
                    margin: 0 50px;
                }

        .footer-container p a{
            color:white;
            text-decoration:none;
        }

        .footer-container p a:hover {
            color: white;
            text-decoration: underline;
        }

        .wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .content {
            flex: 1; /* Mở rộng để đẩy footer xuống cuối */
        }

        
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
