<body>
    <div class="wrapper">
        <header>
            <div class="menu-container">
                <ul class="menu">
                    <li>
                        <a href="/Home/Index" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
