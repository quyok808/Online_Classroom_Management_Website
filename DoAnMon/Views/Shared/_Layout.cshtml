                    <a href="https://mail.google.com/mail/?view=cm&fs=1&to=quyok8080@gmail.com" target="_blank">
                        <i class="fas fa-envelope"></i>
                        <div class="info">quyok8080@gmail.com</div>
                    </a>
                </div>
                <p style="color:white; margin:0;">
                    © 2024
                    <a href="https://zalo.me/0358361511" target="_blank" rel="noopener noreferrer">Only A</a>.
                    All rights reserved.
                </p>
            </div>

        </footer>

        @await RenderSectionAsync("Scripts", required: false)
    </div>
    <script>
        const connections = new signalR.HubConnectionBuilder().withUrl("/chatHub").build();
        connections.on("ReceiveFriendRequestNotification", (requesterName) => {
            toastr.info(`Bạn có lời mời vào nhóm từ ${requesterName}`, 'Thông báo', {
                timeOut: 3000, 
                onclick: function () {
                    // Khi người dùng click vào thông báo, chuyển hướng
                    window.location.href = '/Notifications';
                }
            })

            const noti_count = document.getElementById("noti_count");
            if (noti_count) {
                let count = parseInt(noti_count.innerText, 10) || 0;
                count += 1;
                noti_count.innerText = count;
                noti_count.style.display = "inline"; // Hiển thị lại nếu đang bị ẩn
            }
        });
        connections.start().catch(err => console.error(err.toString()));
    </script>
