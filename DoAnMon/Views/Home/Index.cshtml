 <script>
    
    /*bài post*/
    $(document).ready(function () {
        const mainContent = $('.main-content'); // Lấy khung hiển thị chính
        let currentIndex = -1; // Chỉ số bài đăng hiện tại

        // Hàm lấy bài đăng từ API
        async function fetchPosts() {
            $('#loading').show(); // Hiển thị loading
            try {
                const response = await fetch("https://script.google.com/macros/s/AKfycbyf_E0bAmFqn9i1m_efPwvYXPfUYMBJc9KQ_J1jKOwlBwFBFIGxLQ7kpEuK3lQJml7r/exec");
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                const data = await response.json();
                if (data && data.length > 0) {
                    displayPosts(data); // Hiển thị bài đăng
                    startAutoRotation(); // Bắt đầu xoay tự động
                } else {
                    mainContent.html('<p>No posts available at the moment.</p>');
                }
            } catch (error) {
                console.error('Error fetching posts:', error);
                mainContent.html('<p>Failed to load posts. Please try again later.</p>');
            } finally {
                $('#loading').hide(); // Ẩn loading
            }
        }

        // Hàm hiển thị danh sách bài đăng
        function displayPosts(posts) {
            if (posts.length === 0) {
                mainContent.html('<p>No posts available at the moment.</p>');
                return;
            }

            // Lưu danh sách bài đăng vào bộ nhớ
            mainContent.data('posts', posts);
            currentIndex = 0; // Hiển thị bài đầu tiên
            updateMainContent(posts[currentIndex]); // Hiển thị nội dung bài đăng đầu tiên
        }

        // Hàm cập nhật nội dung bài đăng vào `main-content`
        function updateMainContent(post) {
            const postHtml = `
                <div class="post">
                    <center><h3 style="margin-top: 10px; font-size: 20px">${post.title}</h3></center>
                    ${post.image ? `<img src="${post.image}" alt="Hình ảnh bài viết">` : ''}
                    <div class="post-content">${post.contents_}</div>
                </div>
            `;
            mainContent.html(postHtml); // Cập nhật nội dung vào khung chính
        }

        // Hàm xoay tự động
        function startAutoRotation() {
            const posts = mainContent.data('posts'); // Lấy danh sách bài đăng
            setInterval(function () {
                currentIndex = (currentIndex + 1) % posts.length; // Tăng chỉ số bài đăng
                updateMainContent(posts[currentIndex]); // Cập nhật bài đăng tiếp theo
            }, 10000); // 10 giây mỗi lần
        }

        fetchPosts(); // Gọi hàm lấy dữ liệu bài đăng
    });
</script> 
