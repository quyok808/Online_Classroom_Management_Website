<style>
    .container {
        display: flex;
        margin-top:100px;
        width: 100%;
        overflow-y: auto;
        height: 900px;
    }

    .slider-container {
        display: flex;
        flex-direction: column;
        align-items: center; 
        width: 400px;
    }

        .slider {
            position: relative;
            width: 100%;
            height: 630px;
            overflow: hidden;
            border-radius: 10px;
        }

        .slider img {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transform: translateY(100%);
            animation: slideUp 24s infinite ease-in-out;
        }

        .slider img:nth-child(2) {
            animation-delay: 8s;
        }

        .slider img:nth-child(3) {
            animation-delay: 16s;
        }

        @@keyframes slideUp {
            0% {
                transform: translateY(100%);
                opacity: 0;
            }
            20% {
                transform: translateY(0);
                opacity: 1;
            }
            40% {
                transform: translateY(0);
                opacity: 1;
            }
            60% {
                transform: translateY(-100%);
                opacity: 0;
            }
            100% {
                transform: translateY(-100%);
                opacity: 0;
            }
        }

        .post-container{
            border-top-left-radius:10px;
            border-top-right-radius:10px;
            border-bottom:0;
            flex-grow: 1;
            height:100%;
            display:flex;
            margin-left: 20px;
        }

    .below-slider {
        width: 100%;
        height: 250px;
        padding: 5px;
        text-align: center;
        border: 3px solid blue;       
        border-radius: 10px;
        padding-left:10px;
        margin-bottom:20px;
    }

        .below-slider p a {
            color: black !important; /* Đảm bảo màu đen luôn được ưu tiên */
            text-decoration: none; /* Loại bỏ gạch chân (nếu có) */
        }

            .below-slider p a:hover {
                color: black; /* Đảm bảo khi hover vẫn giữ màu đen */
                text-decoration: underline; /* Tuỳ chọn, thêm hiệu ứng khi hover */
            }

    .main-content {
        width:800px; 
        margin-right: 10px;
        height:100%;
        overflow-y:auto;
    }

        .main-content .post-content {
            text-overflow: inherit;
            display: block;
            -webkit-line-clamp: initial;
            -webkit-box-orient: initial;
        }

        .main-content img {
            max-height: 300px;
            max-width: 500px;
        }

        .main-content h3 {
            font-size: 45px;
            font-weight: bold;
        }

    .post-listcontent {
        flex-grow: 1;
        margin-left: 20px;
        height:fit-content;
        width:350px;
    } 
    .new{
        height:580px;
        width: 100%;
        overflow-y: auto;
    }
    
</style>
